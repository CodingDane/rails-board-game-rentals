<div class="banner pt-2 pb-2" style="background-image: linear-gradient(rgba(255,100,0,1),rgba(255,100,0,1))">
  <div class="container">
    <h1>All games for rent</h1>
    <p>Change your life and play boardgames!</p>
  </div>
</div>
<div class="container mt-3 mb-3">
  <a class="btn btn-primary add-game-button" href="#" >Add game</a>
</div>
<div class="container search-container">
  <input type="text" id="search-input" placeholder="Search game...">
  <button type="button" id="search-button">Search</button>
</div>
<div id="search-results"></div>
<div class="container mt-3">
  <div class="cards">
    <% @games.each do |game| %>
      <div class="card-product">
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
        <div class="card-product-infos">
          <h2> <%= link_to game.name, game_path(game) %> </h2>
          <p> <%= game.description %> </p>
        </div>
      </div>
    <% end %>
  </div>
</div>
