<div class="banner pt-4 pb-4" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://cdn.midjourney.com/7fbf90f2-e8a8-432d-8c4d-7018f5c59b42/0_1.webp);">
  <div class="container">
    <h1 style="color:white">All Games for Rent</h1>
    <p style="color:white">Change your life and play boardgames!</p>
    <div class="container mt-3 mb-3">
      <a class="btn btn-primary add-game-button" href="#" >Add game</a>
    </div>
    <div class="container search-container">
      <input type="text" id="search-input" placeholder="Search game...">
      <button type="button" id="search-button">Search</button>
    </div>
  </div>
</div>
<div id="search-results"></div>
<div class="container mt-3">
  <div class="cards">
    <% @games.each do |game| %>
      <%= link_to game_path(game), class: "game-link" do %>
        <div class="card-product" style="position: relative;">
          <img src=<%= game.string_url %> />
          <div class="card-product-infos">
            <%= game.name %>
            <p> <%= game.genre %> </p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
